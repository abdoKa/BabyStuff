  {% extends "admin/base-admin.html.twig" %}
  {% block stylesheets %}

  <style>
      .image_B {
          height: 150px;
          max-width: 200px;
          object-fit: cover;
      }

      td,
      th {
          text-align: center;
      }

     
     
  </style>
