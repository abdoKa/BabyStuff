  {% block head %}
  <div class="container">
      <div class="row ">
          <div class="col-lg-12">
              <h1 class="Welcom-title"> Marque en d√©tail </h1>
          </div>
          {# / part backend client settings #}
      </div>
      {# / part backend client settings #}
  </div>
  <div class="row w-100" style="margin-left:150px">
      <div class="col-sm-9">


          <table class="table w-100">

              <tr>
                  <th bgcolor="#f3f9fb">Nom du Marque</th>
                  <td>{{ single_Brand.nom }}</td>
              </tr>

              <tr>
                  <th bgcolor="#f3f9fb">Marque</th>
                  <td>{{ single_Brand.description }}</td>
              </tr>
              <tr>
