  {% extends "admin/base-admin.html.twig" %}
  {% block stylesheets %}

  <style>
      .container {
          margin-top: 50px;
      }

  </style>
  {% endblock %}

  {% block head %}
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <h1 class="Welcom-title"> {{users.nom}} {{users.prenom}} <small>-Commande list</small> </h1>
          </div>
          {# / part backend client settings #}
      </div>
      {# / part backend client settings #}
  </div>
  <div class="row">

      <div class="col-sm-3">

          {% include 'admin/menu.html.twig' %}
      </div>    
      <div class="col-sm-9">
          <table class="table">
              <thead>
                  <tr bgcolor="d7f7f5">
                      <th scope="col">les commande</th>
                      <th scope="col">Date du commande</th>
                      <th scope="col-md-2">actes</th>
                  </tr>
              </thead>

              <tbody>
              {% for userOrders in order %}
                  <tr>
                      <td>{{ userOrders.id }} </td>
                      <td>{{ userOrders.createdAt|date("m/d/Y H:i", "Europe/Paris") }}</td>
                      <td><a href="{{ path('order_detail',{'id':userOrders.id}) }}"><i class="fas fa-eye btn-light btn-sm"></i></a></td>
                  </tr>
                 {% endfor %}
              </tbody>
          </table>
      </div>
  </div>
  {% endblock %}
