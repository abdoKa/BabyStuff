  {% extends "admin/base-admin.html.twig" %}
  {% block stylesheets %}

  <style>
      .container {
          margin-top: 50px;
      }

  </style>
  {% endblock %}

  {% block head %}
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <h1 class="Welcom-title"> {{userOrderDetails.nomUtilisateur}} -Commande list </h1>
          </div>
          {# / part backend client settings #}
      </div>
      {# / part backend client settings #}
  </div>
  <div class="row">

      <div class="col-sm-3">

          {% include 'admin/menu.html.twig' %}
      </div>
      <div class="col-sm-9">
          <table class="table">
              <thead>
                  <tr bgcolor="d7f7f5">
                      <th scope="col">#</th>
                      <th scope="col">la commande</th>
                      <th scope="col">Utilisateur</th>
                      <th scope="col">Date du commande</th>
                      <th scope="col-md-2">actes</th>
                  </tr>
              </thead>

              <tbody>
                  {% for userOrderDetail in userOrderDetails %}
                  <tr>
                      <th scope="row"></th>
                      <td>{{ userOrderDetail.id }} </td>
                      <td>{{ userOrderDetail.nomUtilisateur }} {{ userOrderDetail.PrenomUtilisateur }} </td>
                      <td>{{ userOrderDetail.createdAt|date('Y-m-d') }}</td>
                      <td><a href="#"><i class="fas fa-eye btn-light btn-sm"></i></a></td>
                  </tr>
                  {% endfor %}

              </tbody>
          </table>
      </div>
  </div>
  {% endblock %}
