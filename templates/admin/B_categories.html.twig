  {% extends "admin/base-admin.html.twig" %}
  {% block stylesheets %}

  <style>
      .image_B {
          width: 50%;

      }

      td,
      th {
          text-align: center;
      }
  </style>
  {% endblock %}

  {% block head %}
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <h1 class="Welcom-title"> list des Catégories </h1>
          </div>
          {# / part backend client settings #}
      </div>
      {# / part backend client settings #}
  </div>
  <div class="row">

      <div class="col-sm-3">

          {% include 'admin/menu.html.twig' %}
      </div>
      <div class="col-sm-9">
          <div>
              <i class="fas fa-plus"></i> <a href="{{ path('new_product') }}">
                  <spane>Nouvelle Catégorie</spane>
              </a>
          </div>
          <table class="table">
              <thead>
                  {% for categorie in pagination %}
                  <tr bgcolor="d7f7f5">
                      <th scope="col">N°</th>
                      <th scope="col">Catégories</th>
                      <th scope="col">Description</th>
                      <th scope="col">Image</th>
                      <th scope="col-md-2">actes</th>
                  </tr>
              </thead>
              <tbody>
                  <tr>
                      <td>{{ categorie.id }}</td>
                      <td>{{ categorie.nom }}</td>
                      <td>{{ categorie.description }}</td>
                      <td><img src="{{ asset('/brows_file/' ~ categorie.image) }}" class="image_B"></td>
                      <td>
                              <a href="#"><i class="fas fa-eye btn-light btn-sm"></i></a>
                              <a href="#"><i class="fas fa-pencil-alt btn-light btn-sm"></i></a>
                      </td>
                  </tr>
                  {% endfor %}
              </tbody>
          </table>
      </div>
      <div class="navigation" style="text-align:centre;">
          {{ knp_pagination_render(pagination) }}
          <div>
          </div>
      </div>
      {% endblock %}