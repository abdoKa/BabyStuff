  {% extends "admin/base-admin.html.twig" %}
  {% block stylesheets %}

    <style>
.image_B{
    width:50%;    
}
td,th{
    text-align: center;
}
   

  </style>
  {% endblock %}

  {% block head %}
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <h1 class="Welcom-title"> Liste des produits en vedette </h1>
          </div>
          {# / part backend client settings #}
      </div>
      {# / part backend client settings #}
  </div>
  <div class="row">

      <div class="col-sm-3">

          {% include 'admin/menu.html.twig' %}
      </div>
      <div class="col-sm-9">
          <table class="table">
              <thead>
               {% for product_fea in pagination %}
                  
                  <tr bgcolor="d7f7f5">
                    <th scope="col">N°</th>
                      <th scope="col">Produits</th>
                      <th scope="col">Prix</th>
                      <th scope="col">Quantité</th>
                      <th scope="col">image</th>
                      <th scope="col-md-2">actes</th>
                  </tr>
              </thead>
              <tbody>
                  <tr>
                      <th scope="row">
                         {{ product_fea.id }} 
                      </th>
                      <td>{{ product_fea.nom }}</td>
                      <td>{{ product_fea.prix }}MAD</td>
                      <td>{{ product_fea.stock }}</td>
                      <td><img src="{{ product_fea.image }}" class="image_B"</td>
                      <td><a href="#"><i class="fas fa-eye btn-light btn-sm"></i></a>
                      <a href="" class="btn btn-danger btn-sm">
                              <spane> <i class="fas fa-trash-alt"></i></spane>
                          </a></td>
                  </tr>
              {% endfor %} 

              </tbody>
          </table>
      </div>
  </div>
  </div>
  {% endblock %}