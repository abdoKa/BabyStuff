{% extends "admin/base-admin.html.twig" %}
{% block stylesheets %}
<style>
    .container {
        margin-top: 50px;
    }

    .alert {
        text-align: center;
        float: center;
    }

</style>
{% endblock %}

{% block head %}
<div class="container">
    <div class="row">
        <div class="col-lg-12" style="margin:5%">
            <h1 class="Welcom-title">
                list des Catégories
            </h1>
        </div>
    </div>
    {% for message in app.flashes('success') %}
    <div class="alert p-2 m-auto sm-success alert-success" role="alert">
        {{ message }}
        {% endfor %}
    </div>
    {% for message in app.flashes('info') %}
    <div class="alert p-2 m-auto sm-info alert-info" role="alert">
        {{ message }}
    </div>
    {% endfor %}

    {% for message in app.flashes('delete') %}
    <div class="alert p-2 m-auto sm-danger alert-danger" role="alert">
        {{ message }}
    </div>
    {% endfor %}
</div>

<div class="row">
    <div class="col-sm-3">
        {% include 'admin/menu.html.twig' %}
    </div>
    <div class="col-sm-9">
        <div>
            <a href="{{ path('new_categorie') }}" class=" btn btn-primary" style="margin:5px;">
                <i class="fas fa-plus"></i>
            </a>
        </div>
        <table class="table">
            <thead>
                <tr bgcolor="d7f7f5">
                    <th scope="col">N°</th>
                    <th scope="col">Catégories</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col-md-2">actes</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in pagination %}
                <tr>
                    <th scope="row">{{ categorie.id }}</th>
                    <td>{{ categorie.nom }}</td>
                    <td>{{ categorie.description|raw }}</td>
                    <td><img src="{{ asset('/brows_file/' ~ categorie.image) }}" class="image_B"></td>
                    <td>
                        <a href="{{ path('categorie_detail', {'slug':categorie.slug}) }}"><i
                                class="fas fa-eye btn-light btn-sm"></i></a> <a
                            href="{{ path('edit_categorie',{'slug':categorie.slug}) }}"><i
                                class="fas fa-pencil-alt btn-light btn-sm"></i></a>

                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="navigation pagination-sm">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/backend_admin.js') }}"></script>
{% endblock %}
