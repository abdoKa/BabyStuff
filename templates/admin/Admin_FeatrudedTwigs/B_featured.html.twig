  {% extends "admin/base-admin.html.twig" %}
  {% block stylesheets %}

  <style>
  .Welcom-title{
     margin-top:80px;
     text-align:center;
  }
       .image_B {
          height: 100px;
          width: 150px;
          object-fit: cover;
      }

      td,
      th {
          text-align: center;
      }
  </style>
  {% endblock %}

  {% block head %}
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <h1 class="Welcom-title"> Liste des produits en vedette </h1>
          </div>
          {# / part backend client settings #}
      </div>
      {# / part backend client settings #}
  </div>
  <div class="row">

      <div class="col-sm-3">

          {% include 'admin/menu.html.twig' %}
      </div>
      <div class="col-sm-9">
          <table class="table">
              <thead>

                  <tr bgcolor="d7f7f5">
                      <th scope="col">#</th>
                      <th scope="col">Reference</th>
                      <th scope="col">Produits</th>
                      <th scope="col">Prix</th>
                      <th scope="col">Quantit√©</th>
                      <th scope="col">image</th>
                      <th scope="col-md-2">actes</th>
                  </tr>
              </thead>
              <tbody>
                  {% for product_fea in pagination %}
                  <tr>
                      <th scope="row">
                          {{ product_fea.id }}
                      </th>
                      <td>{{ product_fea.referance }}</td>
                      <td>{{ product_fea.nom }}</td>
                      <td>{{ product_fea.prix }}MAD</td>
                      <td>{{ product_fea.stock }}</td>
                      <td><img src="{{ asset('/brows_file/' ~ product_fea.image) }}" class="image_B" </td> <td><a
                              href="{{ path('show_product_featured', {'slug':product_fea.slug}) }}"><i class="fas fa-eye btn-light btn-sm"></i></a>
                          </a></td>
                  </tr>
                  {% endfor %}

              </tbody>
          </table>
      </div>
  </div>
  </div>
  <div class="navigation pagination-sm">
      {{ knp_pagination_render(pagination) }}
  </div>
  {% endblock %}