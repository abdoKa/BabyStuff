{% extends 'base.html.twig' %}

{% block title %}BabyStuff | Orders{% endblock %}
{% block stylesheets %}
<style>
    .form-group {
        margin: 100px 0 50px 50px;
    }

    label {
        color: black;
    }

    hr {
        background-color: black;
    }

    .image_B {
        height: 150px;
        max-width: 150px;
        object-fit: cover;
    }

    .card {
        margin-bottom: -30%;
        position: absolute;
        bottom: 100px;
        right: 150px;
        color: black;

    }

    .row {
        padding-top: 30px;
    }

    strong {
        padding-top: 20px;
    }

</style>
{% endblock %}

{% block body %}


<div class="form-group">
    {{ form_start(form) }}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="row">
        <div class="col-sm-3">{{ form_row(form.nomUtilisateur, {'value':app.user.nom }) }}</div>
        <div class="col-sm-3">{{ form_row(form.PrenomUtilisateur, {'value':app.user.prenom }) }}</div>
    </div>

    <div class="col-sm-6">{{ form_row(form.email, {'value':app.user.email }) }}</div>

    <div class="col-sm-6">{{ form_row(form.telephone, {'value':app.user.telephone }) }}</div>

    <div class="col-sm-6">{{ form_row(form.adresse, {'value':app.user.adresse }) }}</div>

    <div class="col-sm-6">{{ form_row(form.commentaire) }}</div>


    <div class="col-md-5 card " style="right:1px; bottom:-30px;">
        <h1> list des produits </h1>
        {% for key in cartDetails.products %}
        <ul style="margin:10px;">
            <li class="row"> <span><b>{{key.product.nom}} </b> :</span> {{key.product.description|raw}}</li>
            {# <img src="{{ asset('/brows_file/' ~ key.product.image) }}" class="image_B"> #}
            
        </ul>
        {% endfor %}
        <strong>Quantité :</strong>
        {{cartDetails.products|length}} piéces<i class="fas fa-tag"></i>
        <strong>TTC :</strong>
        <h5 style="color:green;">{{ cartDetails.totalsum}} <small>MAD</small> </h5>

    </div>
    {{ form_end(form) }}
</div>

{% endif %}
{% endblock %}
