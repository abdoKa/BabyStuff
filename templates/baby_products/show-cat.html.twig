{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bower_components/font-awesome/css/all.css') }}">
{% endblock %}


{% block body %}

 <h1 class="marque-title">{{ categorie.nom }} </h1>

<section class="marques">
    <div class="containner" >
        <div class="row">
             {% for produit in pagination %}
            <div class="col-sm-3 card marque-products">
                <div class="card-body">
                    <div class="product-image">
                        <img src="{{ produit.image }}" alt="">
                        <p class="card-text">{{ produit.nom }}</p>
                        <a href="#" class="add-to-favourite"></a>
                    </div>
                    <div class="card-title product-title"></div>
                    <a href="{{ path('single_product',{'slug': single_p.slug }) }}"
                        class="btn btn-primary add-to-cart">
                        Check out!!</a>
                </div>
            </div>
            <!--END SINGLE PRODUCTS-->
            {% endfor %}
        </div>
         <div class="navigation">
            {{ knp_pagination_render(pagination) }}
            <div>
    </div>
</section>
{% endblock %}
