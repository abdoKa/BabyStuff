{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bower_components/font-awesome/css/all.css') }}">
{% endblock %}

{% block body %}

<h1 class="marque-title">Nos Marques</h1>

<div class="containner">
<div class="row">
            {% for fournisseur  in fournissueurs %}
            <div class="col-sm-3 card single-product ">
                <div class="card-body">
                    <div class="product-image">
                        <img src="{{ fournisseur.image }}" alt="">
                        <p class="card-text">{{fournisseur.nom }}</p>
                        <a href="#" class="add-to-favourite"></a>
                    </div>
                    <div class="card-title product-title"> </div>
                    <a href="{{ path('show_marque', {'slug': fournisseur.slug}) }}" class="btn btn-primary add-to-cart"> Check out!!</a>
                </div>      
            </div>
            <!--END SINGLE PRODUCTS-->
            {% endfor %}
        </div>
</div>
{% endblock %}