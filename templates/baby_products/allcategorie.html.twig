{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bower_components/font-awesome/css/all.css') }}">
{% endblock %}

{% block body %}

<h1 class="marque-title">Tous les cat√©gories</h1>

<section class="marques">
    <div class="containner">
        <div class="row">
            {% for categoriesMenu in pagination %}
            <div class="col-sm-3 card marque-products">
                <div class="card-body">
                    <div class="product-image">
                        <img src="{{ categoriesMenu.image }}" alt="">
                        <p class="card-text">{{ categoriesMenu.nom }}</p>
                        <a href="#" class="add-to-favourite"></a>
                    </div>
                    <div class="card-title product-title"></div>
                    <a href="{{ path('show_categorie',{'slug': categoriesMenu.slug}) }}" class="btn btn-primary add-to-cart">
                        Check out!!</a>
                </div>
            </div>
            <!--END SINGLE PRODUCTS-->
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
            <div>
            </div>
</section>

{% endblock %}