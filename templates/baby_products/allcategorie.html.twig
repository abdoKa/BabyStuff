{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    .card-img-top {
        width: 100%;
        height: 30vh;
        object-fit: cover;
    }

</style>
{% endblock %}
{% block title %}BabyStuff | catégories{% endblock %}

{% block body %}

<h1 class="marque-title">Tous les catégories</h1>

<section class="marques">
    <div class="containner">
        <div class="row">
            {% for categoriesMenu in pagination %}
            <div class="col-sm-3 card marque-products">
                <div class="card-body">
                    <div>
                        <img src="{{ asset('/brows_file/' ~ categoriesMenu.image) }}" class=" card-img-top" alt="">
                        <p class="card-text">{{ categoriesMenu.nom }}</p>
                        <a href="#" class="add-to-favourite"></a>
                    </div>
                    <div class="card-title product-title"></div>
                    <a href="{{ path('show_categorie',{'slug': categoriesMenu.slug}) }}"
                        class="btn btn-primary add-to-cart">
                        Check out!!</a>
                </div>
            </div>
            <!--END SINGLE PRODUCTS-->
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
            <div>
            </div>
</section>

{% endblock %}
