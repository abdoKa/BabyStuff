{% extends 'base.html.twig' %}
{% block title %}BabyStuff | Account-Profile{% endblock %}

{% block stylesheets %}
<style>
    body,
    html {
        height: 100%;
        width: 100%;
    }

    .container-list {
        margin: 10px 0 10px 10px;
    }



    .card-body {
        padding: 50px;
    }

    h5 {
        padding: 10px;
    }

    .btn-default {
        color: black;
    }

    #edit_user_confirm_password {
        display: none;
    }

    .alert {
        width: 40%;
    }

</style>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="Welcom-title"> Paramètre-Profile | <small>{{ (app.user.prenom) }} {{ app.user.nom }}</small>
            <h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-4 card ">
        <small>Profile</small>
        <a href="{{ path('user_profile') }}"><i class="far fa-user-circle btn-light btn-sm"></i></a>
        <div class="card-body">
            <h5>Utilisateur: <small style="color:black;">{{ app.user.nom }} {{ app.user.prenom }}</small></h5>
            <h5>E-mail: <small style="color:black;">{{ app.user.email }}</small></h5>
            <h5>Téléphone: <small style="color:black;">{{ app.user.telephone }}</small></h5>
            <h5>Adresse: <small style="color:black;">{{ app.user.adresse }}</small></h5>
            <small>changer votre mot de passe</small>
            <a href="{{ path('user_password_edit') }}"><i class="fas fa-lock btn-light btn-sm"></i></a>
        </div>
    </div>

    <div class="col-sm-6">
        {{ form_start(form) }}
        {% for message in app.flashes('error') %}
        <div class="alert p-2 m-auto sm-danger alert-danger" role="alert">
            {{ message }}
        </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-5">{{ form_row(form.nom) }}</div>
            <div class="col-md-5">{{ form_row(form.prenom) }}</div>
        </div>

        <div class="row">
            <div class="col-md-6">{{ form_row(form.email) }}</div>
            <div class="col-md-5">{{ form_row(form.telephone) }}</div>
        </div>

        <div class="row">
            <div class="col-md-9">{{ form_row(form.adresse) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">{{ form_row(form.confirm_password , {'label':false }) }}</div>
        </div>
        {{ form_end(form) }}


    </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function () {
        swal("Validation",
            "Pour une raison de sécurity entrer votre mot de passe pour sauvgarder vos modifications");

        $('#edit_user_save').click(function (e) {
            $("#edit_user_confirm_password").show();
        });
    });
    setTimeout(function () {
        $("div.alert").delay(4000).slideUp(300);
    }, 2000); // 5 secs

</script>
{% endblock %}
