{% extends 'base.html.twig' %}
{% block title %}BabyStuff | Account-Profile{% endblock %}

{% block stylesheets %}
<style>
    body,
    html {
        height: 100%;
        width: 100%;
    }

    .container-list {
        margin: 10px 0 10px 10px;
    }

    .card-body {
        padding: 50px;
    }

    h5 {
        padding: 10px;
    }

</style>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="Welcom-title"> Mon Profile | <small>{{ (app.user.nom) }}</small>
            <h1>
    </div>
    {% for message in app.flashes('info') %}
    <div class="alert p-2 m-auto sm-info alert-info" role="alert">
        {{ message }}
    </div>
    {% endfor %}
</div>
<div class="row">
    <div class="col-md-3">
        {% include 'user_account/menu.html.twig' %}
    </div>
    <div class="col-md-6 card ">
        <a href="{{ path('user_profile_edit') }}"><i class="fas fa-pencil-alt btn-light btn-sm"></i></a>
        <div class="card-body">
            <h5>Utilisateur: <small style="color:black;">{{ app.user.nom }} {{ app.user.prenom }}</small></h5>
            <h5>E-mail: <small style="color:black;">{{ app.user.email }}</small></h5>
            <h5>Téléphone: <small style="color:black;">{{ app.user.telephone }}</small></h5>
            <h5>Adresse: <small style="color:black;">{{ app.user.adresse }}</small></h5>
        </div>
    </div>
</div>
{% endblock %}
